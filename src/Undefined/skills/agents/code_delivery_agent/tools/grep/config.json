{
    "type": "function",
    "function": {
        "name": "grep",
        "description": "在工作区内搜索文件内容。",
        "parameters": {
            "type": "object",
            "properties": {
                "pattern": {
                    "type": "string",
                    "description": "搜索模式（字符串或正则表达式）"
                },
                "path": {
                    "type": "string",
                    "description": "可选：搜索路径（相对于 /workspace，默认搜索整个工作区）"
                },
                "is_regex": {
                    "type": "boolean",
                    "description": "是否为正则表达式（默认 false，按字面量匹配）"
                },
                "case_sensitive": {
                    "type": "boolean",
                    "description": "是否区分大小写（默认 true）"
                },
                "max_matches": {
                    "type": "integer",
                    "description": "最大匹配数（默认 100）"
                }
            },
            "required": ["pattern"]
        }
    }
}
