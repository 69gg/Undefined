{
    "type": "function",
    "function": {
        "name": "update",
        "description": "更新一条手动长期记忆（memory 系列）。需要提供该记忆的 UUID。仅作用于 memory.* 清单，不作用于认知记忆事件/侧写。",
        "parameters": {
            "type": "object",
            "properties": {
                "uuid": {
                    "type": "string",
                    "description": "要更新的记忆的 UUID"
                },
                "fact": {
                    "type": "string",
                    "description": "新的记忆内容"
                }
            },
            "required": [
                "uuid",
                "fact"
            ]
        }
    }
}
