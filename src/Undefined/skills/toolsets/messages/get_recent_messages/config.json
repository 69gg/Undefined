{
    "type": "function",
    "function": {
        "name": "get_recent_messages",
        "description": "获取指定聊天的历史消息。群聊场景优先走 OneBot 历史接口，失败时回退本地 history；私聊默认使用本地 history。",
        "parameters": {
            "type": "object",
            "properties": {
                "chat_id": {
                    "type": "string",
                    "description": "聊天ID（群号或QQ号）"
                },
                "type": {
                    "type": "string",
                    "description": "聊天类型（group 或 private）",
                    "enum": ["group", "private"]
                },
                "start": {
                    "type": "integer",
                    "description": "起始位置（从最新消息往前数），默认为 0（最新消息）"
                },
                "end": {
                    "type": "integer",
                    "description": "结束位置（从最新消息往前数），默认为 10"
                }
            },
            "required": ["chat_id", "type"]
        }
    }
}
